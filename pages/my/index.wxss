  background: none;
  border: none;
  height: auto;
  line-height: auto;
}
.orders{
  width: 700rpx;
  margin: auto;
  border-radius: 16rpx;
  overflow: hidden;
}
.CommonFunctions{
  width: 700rpx;
  height: auto;
  background-color: white;
  border-radius: 16rpx;
  margin: 32rpx auto;
  display: flex;
  flex-direction: column;
  padding: 32rpx;
  justify-content: center;
  margin-bottom: 180rpx;
}
.CommonFunctions .title{
  font-size: 30rpx;
